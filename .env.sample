# ===========================================
# Mathematricks Trader - Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it contains secrets)

# ===========================================
# Docker Services Configuration
# ===========================================

# MongoDB (Docker internal network uses service name "mongodb")
MONGODB_URI=mongodb://mongodb:27017

# MongoDB (accessible from Mac for local scripts like send_test_signal.py)
MONGODB_URI_LOCAL=mongodb://localhost:27018/?directConnection=true

# Pub/Sub Emulator (Docker internal network)
PUBSUB_EMULATOR_HOST=pubsub-emulator:8085
PUBSUB_PROJECT_ID=mathematricks-trader

# Account Data Service URL (Docker internal network)
ACCOUNT_DATA_SERVICE_URL=http://account-data-service:8082

# ===========================================
# Interactive Brokers (IBKR) - IB Gateway Docker
# ===========================================
# Paper trading credentials
IBKR_PAPER_USERNAME=your_paper_username
IBKR_PAPER_PASSWORD=your_paper_password

# Live trading credentials (optional)
IBKR_LIVE_USERNAME=your_live_username
IBKR_LIVE_PASSWORD=your_live_password

# TOTP secret from Mobile Authenticator setup (the text code, not QR)
IBKR_TOTP_SECRET=your_totp_secret

# ===========================================
# Telegram Notifications
# ===========================================
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_STAGING_CHAT_ID=your_staging_chat_id_here

# ===========================================
# Optional: Logging
# ===========================================
LOG_LEVEL=INFO
